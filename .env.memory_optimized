# Memory-optimized settings for 32GB MacBook Pro
# Copy this to .env to use

# Use mock LLM to reduce memory usage during indexing
JOURNAL_LLM_MODEL_TYPE=mock

# Reduce embedding batch size
JOURNAL_EMBEDDING__BATCH_SIZE=4
JOURNAL_EMBEDDING__CACHE_SIZE=500
JOURNAL_EMBEDDING__USE_CACHE=false

# Reduce ingestion tokens
JOURNAL_INGESTION__MAX_TOKENS=200
JOURNAL_INGESTION__OVERLAP_TOKENS=20
JOURNAL_INGESTION__BATCH_SIZE=25

# Reduce search context
JOURNAL_SEARCH__K=5
JOURNAL_SEARCH__MAX_CONTEXT_TOKENS=1024

# CPU only mode (disable Metal acceleration)
JOURNAL_LLM__USE_METAL=false
JOURNAL_LLM__N_THREADS=4